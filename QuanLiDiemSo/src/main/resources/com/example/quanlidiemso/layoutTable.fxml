<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.quanlidiemso.LayoutTable"
            prefHeight="400.0" prefWidth="600.0">

    <TableView fx:id="tableView">
        <columns>
            <TableColumn prefWidth="75" fx:id="id" text="Id"/>
            <TableColumn prefWidth="120" fx:id="name" text="Name"/>
            <TableColumn prefWidth="75" fx:id="clasS" text="Class"/>
            <TableColumn prefWidth="75" fx:id="gender" text="Gender"/>
            <TableColumn prefWidth="110" fx:id="address" text="Address"/>
            <TableColumn prefWidth="75" fx:id="score" text="Score"/>
        </columns>
    </TableView>
    <HBox layoutX="550" layoutY="10">
        <Label text="Id              "/>
        <TextField fx:id="idTf"/>
    </HBox>
    <HBox layoutX="550" layoutY="40">
        <Label text="Name      "/>
        <TextField fx:id="nameTf"/>
    </HBox>
    <HBox layoutX="550" layoutY="70">
        <Label text="Class       "/>
        <TextField fx:id="classTf"/>
    </HBox>
    <HBox layoutX="550" layoutY="100">
        <Label text="Gender   "/>
        <TextField fx:id="genderTf"/>
    </HBox>
    <HBox layoutX="550" layoutY="130">
        <Label text="Address "/>
        <TextField fx:id="addressTf"/>
    </HBox>
    <HBox layoutX="550" layoutY="160">
        <Label text="Score      "/>
        <TextField fx:id="scoreTf"/>
    </HBox>
    <HBox layoutX="550" layoutY="190">
        <Button text="add" onAction="#add"/>
        <Button text="remove" onAction="#remove"/>
    </HBox>

</AnchorPane>
